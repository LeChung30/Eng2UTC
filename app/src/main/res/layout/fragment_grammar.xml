<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style="@style/SCREEN"
    android:padding="16dp"
    android:id="@+id/grammar_fragment"
    tools:context=".Fragments.GrammarFragment">

    <!-- Header cố định, không cuộn -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <ImageView
            android:id="@+id/btn_back_grammar"
            android:layout_width="24dp"
            android:layout_height="24dp"
            style="@style/backBtn" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/grammar"
            style="@style/TEXT"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            style="@style/settingNotification" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- CardView cho mục Level-based -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:padding="16dp"
                app:cardBackgroundColor="#E0F7FA">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    style="@style/Home_Blue_Default"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/level_based"
                        android:textSize="18sp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        style="@style/TEXT"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6 levels"
                        android:textStyle="bold"
                        style="@style/TEXT"
                        android:layout_marginStart="20dp"
                        android:textSize="16sp" />

                    <!-- LinearLayout contains 6 images -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="20dp"
                        android:gravity="bottom"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="55dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_level_a1" />

                        <ImageView
                            android:layout_width="55dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_level_a2" />

                        <ImageView
                            android:layout_width="55dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_level_b1" />

                        <ImageView
                            android:layout_width="55dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_level_b2" />

                        <ImageView
                            android:layout_width="55dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_level_c1" />

                        <ImageView
                            android:layout_width="55dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_level_c2" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- CardView cho mục Tense -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardView_tense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:padding="16dp"
                app:cardBackgroundColor="#E3F2FD">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    style="@style/Home_Blue_Default"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"

                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tense"
                            style="@style/TEXT"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12 lessons"
                            style="@style/TEXT"
                            android:textStyle="bold"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_grammar_tense" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- CardView cho mục Adjectives and Prepositions -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:padding="16dp"
                app:cardBackgroundColor="#E3F2FD">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    style="@style/Home_Blue_Default"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Adjectives and\nPrepositions"
                            style="@style/TEXT"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_grammar_adj" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- CardView cho mục Phrases and Clauses -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:padding="16dp"
                app:cardBackgroundColor="#E3F2FD">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    style="@style/Home_Blue_Default"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Phrases and \nClauses"
                            style="@style/TEXT"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_grammar_phrases" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
